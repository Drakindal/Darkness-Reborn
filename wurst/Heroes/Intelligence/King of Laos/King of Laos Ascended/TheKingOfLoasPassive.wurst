package TheKingOfLoasPassive
import ClosureEvents
import MyAbilityIds
import MyUnitIds
init
    crownOfRezan()
function crownOfRezan()
    EventListener.add(EVENT_PLAYER_UNIT_DEATH) -> 
        let u = GetKillingUnit()
        if u.getAbilityLevel(ABILITY_44) >= 1 and u.getTypeId() == PLAY_HERO_33_ASCENDED
            u.addInt(2)