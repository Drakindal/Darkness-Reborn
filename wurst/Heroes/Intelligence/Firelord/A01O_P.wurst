package A01O_P
import ClosureTimers
import codeDamageTypings
init

public function blaze(unit source, unit target)
    doPeriodicallyCounted(1, 4) (CallbackCounted cb) ->
        var damage = 100.
        if(IsUnitType(target, UNIT_TYPE_HERO))
            damage = damage + target.getMaxHP() * 0.02
            source.damageTargetCode(source.getInt(true).toReal(), target, null, -1, damageType.PURE)
        source.damageTargetCode(damage, target, null, -1, damageType.MAGICAL)