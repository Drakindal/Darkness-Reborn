package A00J_R
import MyAbilityIds
import ClosureEvents
init

    burstMana()

function burstMana()
    EventListener.onCast(DARKRANGER_ABIL_4) (unit caster) ->
        let lvl = GetUnitAbilityLevel(caster, DARKRANGER_ABIL_4)
        let hp = caster.getHP()
        let calc = 1-(0.04*lvl)
        let newHp = calc*hp
        let newMp = (newHp * (lvl * 0.01))
        caster.setHP(newHp)
        caster.addMana(newMp)