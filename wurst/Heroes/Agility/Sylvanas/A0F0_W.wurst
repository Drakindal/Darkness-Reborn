package A0F0_W

import DamageEvent

init



public function phantomArrow(unit src, unit targ)
    
    let hp = src.getMaxHP()
    let lvl = src.getAbilityLevel('A0F0')
    let dmg = (lvl*0.03)*hp

    //u.damageTarget(target, dmg, false, true, ATTACK_TYPE_NORMAL, DAMAGE_TYPE_UNIVERSAL, WEAPON_TYPE_WHOKNOWS)
    if targ.hasAbility('B001')
        DamageEvent.addAmount(dmg)
        targ.removeAbility('B001')
    