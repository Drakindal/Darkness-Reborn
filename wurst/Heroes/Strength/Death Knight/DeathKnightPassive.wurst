package DeathKnightPassive

import MyUnitIds

init
    deathKnightPassive()
function deathKnightPassiveCond() returns boolean
    let u = GetKillingUnit()
    if(GetUnitTypeId(u) == PLAY_HERO_4)
        u.addStr(1)
    return false
function deathKnightPassive()
    CreateTrigger()..registerAnyUnitEvent(EVENT_PLAYER_UNIT_DEATH)..addCondition(Condition(function deathKnightPassiveCond))