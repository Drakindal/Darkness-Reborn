package wolfmanHowl

import ClosureEvents
import MyAbilityIds
import OrderIds
import DummyCaster

function howl()
    EventListener.onCast(WOLF_FINAL_ABIL_2) (unit caster) ->
        new DummyCaster()
        ..origin(caster.getPos())
        ..owner(caster.getOwner())
        ..castImmediate(WOLF_FINAL_DUMMY_1, caster.getAbilityLevel(WOLF_FINAL_ABIL_2), OrderIds.roar)

init
    howl()