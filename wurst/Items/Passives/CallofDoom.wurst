package CallofDoom

import MyItemIds
import ClosureEvents
import Global_Variables
init
    callofDoom()
function callofDoom()
    EventListener.add(EVENT_PLAYER_UNIT_DEATH) ->
        let p = playerHero.get(GetKillingUnit().getOwner())
        if p.hasItemById(ITEM_CALL_OF_DOOM) and GetRandomInt(0, 100) <= 100
            p.addAgi(1)