package ThunderBow

import ClosureForGroups
import Abilities
import codeDamageTypings
integer counter = 0

public function thunderBow(unit src)
    counter = 0
    forUnitsInRange(src.getPos(), 900) (unit u) ->
        if(u.isEnemyOf(src))
            if(counter < 4)
                magicalDamageCode(1000, src, u)
                flashEffect(Abilities.forkedLightningTarget, u.getPos())
                counter++