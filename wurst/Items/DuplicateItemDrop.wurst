package DuplicateItemDrop
import MoonUtils
import ClosureEvents
init
    duplicateItemDrop()
function duplicateItemDrop()
    EventListener.add(EVENT_PLAYER_UNIT_PICKUP_ITEM) -> 
        GetTriggerUnit().forEachItemInInventory() (item t) ->
            if t == GetManipulatedItem()
                GetTriggerUnit().removeItem(GetManipulatedItem())
                printTimedToPlayer(COLOR_GOLD_STR+"You can not hold duplicate items in your inventory.", 3, GetTriggerUnit().getOwner())